<%= form_for @posts, html: {multipart: true} do |f|%>
<% if @posts.errors.any? %>
<div class="alert alert-danger">
    <h2>
        <%= t('common.errors')%>
    </h2>
    <ul>
        <% @posts.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
</div>
<% end %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :text %>
<%= f.trix_editor :title %>
<%= f.file_field :image %>
<%= f.submit 'Send', class: 'btn btn-primary'%>


<%end %>