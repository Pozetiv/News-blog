<h1>This page for create new news</h1>

<%= form_for @posts, html: {multipart: true} do |f|%>
    <% if @posts.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@posts.errors.count, "error") %> prohibited
            this POST from being saved:
          </h2>
          <ul>
            <% @posts.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
<%= f.label :title %>
<%= f.text_field :title %>
    <%= f.label :text %>
    <%= f.trix_editor :title %>
    <%= f.file_field :image %>
    <%= f.submit 'Send' %>


<%end %>
