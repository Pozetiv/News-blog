<% provide(:title, '@post.title') %>
<h1><%= @post.title %></h1>
<%= image_tag @post.image.url(:big), class: 'img-show' if @post.image? %>
<%= @post.body %>

<%= link_to 'edit', edit_post_path(@post) %>

<div id="disqus_thread"></div>
<script>


    var disqus_config = function () {
    this.page.url = 'http://localhost.com<%= request.original_fullpath %>';  // Replace PAGE_URL with your page's canonical URL variable
    this.page.identifier = '<%= @post.id %>'; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
    };

    (function() { // DON'T EDIT BELOW THIS LINE
        var d = document, s = d.createElement('script');
        s.src = 'https://poster-2.disqus.com/embed.js';
        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
    })();
</script>
<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>